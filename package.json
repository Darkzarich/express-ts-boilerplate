{
  "name": "express-ts-boilerplate",
  "version": "1.0.0",
  "description": "A boiler plate for Express + TS project",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "start:dev": "nodemon --exec \"npx ts-node\" index.ts",
    "build": "tsc --project ./",
    "lint:types": "tsc --project ./ --noEmit",
    "test": "npx jest"
  },
  "keywords": [
    "boilerplate",
    "express",
    "typescript"
  ],
  "author": "Darkzarich",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.45",
    "@types/supertest": "^2.0.16",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4",
    "ts-jest": "^29.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}